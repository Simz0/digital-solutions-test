{
  "include": [
    "src/**/*",
    "config.ts"
  ],
  "exclude" : [
    "node_modules",
    "src/**/*.test",
    "src/**/*.spec"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "module": "NodeNext",
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "#*": [
        "./src/*"
      ]
    },
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true
  }
}